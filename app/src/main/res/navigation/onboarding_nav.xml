<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/onboarding"
    app:startDestination="@id/splashFragment">

    <include app:graph="@navigation/login2" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.xoomnavigation.onboarding.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_onboardingFragment"
            app:destination="@id/onboardingFragment"
            app:popUpTo="@+id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_homeActivity3"
            app:destination="@id/homeActivity"
            app:launchSingleTop="true"
            app:popUpTo="@+id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_login22"
            app:destination="@id/login2" />
    </fragment>

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.xoomnavigation.onboarding.OnboardingFragment"
        android:label="fragment_onboarding"
        tools:layout="@layout/fragment_onboarding" />
    <activity
        android:id="@+id/homeActivity"
        android:name="com.example.xoomnavigation.home.HomeActivity"
        android:label="activity_home"
        tools:layout="@layout/activity_home" />

</navigation>